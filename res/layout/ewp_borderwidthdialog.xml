<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <SeekBar
        android:id="@+id/borderwidthdialogseekbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:max="100" />

    <TextView
        android:id="@+id/borderwidthdialoginfotext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/borderwidthdialogseekbar"
        android:layout_centerHorizontal="true"
        android:text="0" />

    <Button
        android:id="@+id/borderwidthdialogbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/borderwidthdialoginfotext"
        android:layout_centerHorizontal="true"
        android:text="@string/button_ok" />

</RelativeLayout>